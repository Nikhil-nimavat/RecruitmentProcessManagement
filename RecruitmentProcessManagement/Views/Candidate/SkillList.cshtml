@model List<RecruitmentProcessManagement.Models.Skill>

<h2>Skill List</h2>

<a href="@Url.Action("CreateSkill")" class="btn btn-success">Add New Skill</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Skill Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var skill in Model)
        {
            <tr>
                <td>@skill.SkillID</td>
                <td>@skill.SkillName</td>
                <td>
                    <a href="@Url.Action("EditSkill", new { id = skill.SkillID })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("DeleteSkill", new { id = skill.SkillID })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>