@model RecruitmentProcessManagement.Models.Skill

<h2>Edit Skill</h2>

<form asp-action="EditSkill" method="post">

    <input type="hidden" asp-for="SkillID" />
    <div class="mb-3">
        <label class="form-label">Skill Name</label>
        <input asp-for="SkillName" class="form-control" required />
        <span asp-validation-for="SkillName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>