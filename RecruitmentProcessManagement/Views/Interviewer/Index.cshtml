@model IEnumerable<RecruitmentProcessManagement.Models.Interviewer>

@{
    ViewData["Title"] = "Interviewers List";
}

<h2>Interviewers List</h2>

<a asp-action="Create" class="btn btn-primary">Add Interviewer</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Designation</th>
            <th>Experience Years</th>
            <th>Created Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var interviewer in Model)
        {
            <tr>
                <td>@interviewer.FullName</td>
                <td>@interviewer.Email</td>
                <td>@interviewer.PhoneNumber</td>
                <td>@interviewer.Designation</td>
                <td>@interviewer.ExperienceYears</td>
                <td>@interviewer.CreatedDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@interviewer.InterviewerID" class="btn btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@interviewer.InterviewerID" class="btn btn-info">View</a>
                    <a asp-action="Delete" asp-route-id="@interviewer.InterviewerID" class="btn btn-danger" onclick="return confirm('Are you sure?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>